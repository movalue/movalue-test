/**index.wxss**/
scroll-view{
  padding-bottom: 100px;
}

.list{
  background-color: #fefde9;
  padding: 10px 5%;
  margin-top: 20px;
}

#list_info_1{
  height: 40px;
  font-size: 15px;
  line-height: 40px;
  font-weight: 600;
}

#list_info_2{
  height: 40px;
  font-size: 13px;
  line-height: 40px;
}

#list_info_3{
  font-size: 13px;
  line-height: 20px;
}

.name{
  float: left;
  height: 20px;
}
.contact{
  float: right;
  background-color: transparent;
  border: none;
  font-size: 13px;
}

.details{
  width: 33.33%;
  display: inline-block;
}

.description{
  color: #c2c2c2;
  word-wrap: break-word;
}

.add{
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  background-image: url(http://sulezhi.com/addBtnBg.png);
  background-size: auto 100%;
  background-position-y: 0px;
  padding: 10px 0;
}

.add text{
  font-size: 10px;
  display: block;
}

.add_button{
  width: 40px;
  height: 40px;
  line-height: 40px;
  font-size: 20px;
  font-weight: 900;
  border-radius: 20px;
  border: none;
  background-color: #fcee21;
  margin: 10px auto;
}

