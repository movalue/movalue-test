<!--pages/journey list/journey list.wxml-->

<scroll-view class='contactContainer'>

  <view class='subject'>
    <view class='contactSubject'>
      物件信息
    </view>
    <input placeholder-style='font-size:10px;' class='contactDetail' placeholder='物件名称' value='口红'></input>
    <input placeholder-style='font-size:10px;' class='contactDetail' placeholder='起点 -- 终点' value='阿姆斯特丹-北京'></input>
    <input placeholder-style='font-size:10px;' class='contactDetail' placeholder='尺寸' value='15*60*15mm'></input>
    <input placeholder-style='font-size:10px;' class='contactDetail' placeholder='重量' value='300g'></input>
    <input placeholder-style='font-size:10px;' class='contactDetail' placeholder='意向酬劳' value='10欧'></input>
  </view>

  <view class='subject'>
    <view class='contactSubject'>
      联系方式
    </view>
    <input placeholder-style='font-size:10px;' class='contactDetail' placeholder='姓名' value='Emiliy Li'></input>
    <input placeholder-style='font-size:10px;' class='contactDetail' placeholder='电话/微信/邮箱等' value='emilyli@gmail.com'></input>
  </view>

  <view class='subject'>
    <view class='contactSubject'>
      备注
    </view>
    <textarea placeholder-style='font-size:10px;' class='remark'>6只口红，购物小票均齐全</textarea>
  </view>
  
  <view> 
    <button class='toMy' bindtap='toMyItem'>
      确认更改
    </button> 
  </view>
</scroll-view>

